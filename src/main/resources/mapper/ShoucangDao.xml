<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.buyhouse.dao.ShoucangDao">

    <resultMap type="com.example.buyhouse.entity.Shoucang" id="ShoucangMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="value" column="value" jdbcType="VARCHAR"/>
        <result property="opid" column="opid" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ShoucangMap">
        select
          id, value, opid
        from shoucang
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ShoucangMap">
        select
          id, value, opid
        from shoucang
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="value != null and value != ''">
                and value = #{value}
            </if>
            <if test="opid != null and opid != ''">
                and opid = #{opid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from shoucang
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="value != null and value != ''">
                and value = #{value}
            </if>
            <if test="opid != null and opid != ''">
                and opid = #{opid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into shoucang(id, value, opid)
        values (#{id},#{value}, #{opid})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into shoucang(value, opid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.value}, #{entity.opid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into shoucang(value, opid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.value}, #{entity.opid})
        </foreach>
        on duplicate key update
        value = values(value),
        opid = values(opid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update shoucang
        <set>
            <if test="value != null and value != ''">
                value = #{value},
            </if>
            <if test="opid != null and opid != ''">
                opid = #{opid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from shoucang where id = #{id}
    </delete>

    <select id="findvaule" resultType="com.example.buyhouse.entity.Shoucang">
        select * from shoucang where id = #{arg0} and opid = #{arg1}
    </select>


    <update id="updatevalue">
        update shoucang
        <set>
            <if test="value != null and value != ''">
                value = #{value},
            </if>
        </set>
        where id = #{id} and opid = #{opid}
    </update>


    <delete id="deleteByopid">
        delete from shoucang where opid = #{opid} and value like '0';
    </delete>



    <select id="getpage" resultType="com.example.buyhouse.entity.Shoucang">
        select * from shoucang
        <where>
            <if test="query != null and query != ''">
                and opid like concat ('%',#{query},'%')
            </if>
        </where>
    </select>


</mapper>

